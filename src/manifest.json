{
  "name": "投研快手",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "投研系统内容抓取工具",
  "author": {
    "name": "Gerald",
    "url": "http://gerald.top"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Grabber"
  },
  "content_scripts": [{
    "matches": ["http://localhost:4002/*", "*://backend-invest.test.dtcj.com/*", "*://backend-invest.dtcj.com/*"],
    "run_at": "document_start",
    "js": ["common.js", "invest.js"]
  }, {
    "matches": ["<all_urls>"],
    "js": ["inject.js"]
  }],
  "background": {
    "scripts": ["common.js", "rules.js", "events.js"]
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
